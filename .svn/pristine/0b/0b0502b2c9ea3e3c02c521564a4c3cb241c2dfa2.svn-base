<template>
    <div class="box">
        <Echarts :options="Options"></Echarts>
    </div>
</template>
<script>
/* eslint-disable */
import Echarts from 'vue-echarts'

export default {
  components: {
    Echarts,
  },
  props:['data'],
  data() {
    return {
      Options: {
        tooltip: {
          trigger: 'axis',
          formatter(params) {
            let res = params[0].name
            for (let i = 0, l = params.length; i < l; i++) {
              if (params[i].seriesType === 'line') {
                res += `<br/>${params[i].seriesName} : ${params[i].value ? params[i].value : '-'}%`
              } else {
                res += `<br/>${params[i].seriesName} : ${params[i].value ? params[i].value : '-'}次`
              }
            }
            return res
          },
        },
        grid: {
          bottom: 5,
          left: 10,
          right: 10,
          containLabel: true,
        },
        textStyle: {
          color: '#a9acae',
        },
        legend: {
          textStyle: {
            color: '#a9acae',
          },
          data: ['2016报警类型', '2017报警类型'],
        },
        color: ['#5aa4d1', '#c43323', '#ffff00'],
        xAxis: [{
          type: 'category',
          data: ['离开指定区域', '进入指定区域', '紧急报警', '疲劳驾驶', '超速报警', '其他'],
          axisLabel: {
            rotate: 45,
          },
          axisLine:{
            lineStyle:{
              color:'#fff'
            }
          }
        }],
        yAxis: [{
          type: 'value',
          name: '次',
          min: 0,
          position: 'left',
          axisLabel: {
            formatter: '{value}',
          },
          axisLine:{
            show:false,
            lineStyle:{
              color:'#fff'
            }
          }
        }, 
        ],
        series: [{
          name: '2016报警类型',
          type: 'bar',
          yAxisIndex: 0,
          barMaxWidth: 10,
          label: {
            normal: {
              show: true,
              position: 'top',
            },
          },
          data: [22, 22, 23, 77, 24, 55],
        }, {
          name: '2017报警类型',
          type: 'bar',
          yAxisIndex: 0,
          barMaxWidth: 10,
          label: {
            normal: {
              show: true,
              position: 'top',
            },
          },
          data: [201, 222, 223, 777, 244, 255],
        }],
      },
    }
  },
  watch:{
    data(){
      this.Options.legend.data=this.data.map(o=>o.year)
      this.Options.xAxis[0].data=this.data[0].data.map(o=>o.drive_event_type)
      this.Options.series[0].data=this.data[0].data.map(o=>o.alarm_quantity)
      this.Options.series[0].name=this.data[0].year
      this.Options.series[1].data=this.data[1].data.map(o=>o.alarm_quantity)
      this.Options.series[1].name=this.data[1].year
    }
  },
  created(){
    this.Options.legend.data=this.data.map(o=>o.year)
    this.Options.xAxis[0].data=this.data[0].data.map(o=>o.drive_event_type)
    this.Options.series[0].data=this.data[0].data.map(o=>o.alarm_quantity)
    this.Options.series[0].name=this.data[0].year
    this.Options.series[1].data=this.data[1].data.map(o=>o.alarm_quantity)
    this.Options.series[1].name=this.data[1].year
  }
}
</script>
<style lang="scss" scoped>
.box{
    width: 450px;
    height: 200px;
    position: absolute;
    .echarts{
        width: 100%;
        height: 100%;
    }
}
</style>
