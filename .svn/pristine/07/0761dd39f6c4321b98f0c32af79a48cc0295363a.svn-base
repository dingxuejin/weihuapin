    },
    scrollContent(i) {
      this.detailesBoxShow += 1 * i;
      if (this.detailesBoxShow > 2) {
        this.detailesBoxShow = 2;
      }
      if (this.detailesBoxShow < 1) {
        this.detailesBoxShow = 1;
      }
    }
  }
};
</script>

