<template>
  <div class="top_name">
    <select @change='select' v-model="SelectValue">
      <option :value="item.entity_id"
              v-for='(item,index) in entities' :key="index">{{item.entity_name}}</option>
    </select>
    <div class="top_btn"></div>
  </div>
</template>

<script>
import { mapActions, mapState } from 'vuex'

export default {
  data() {
    return {
      entity_name: '亿顺凯危货运输有限公司',
      SelectValue: this.$route.query.entity_id,
    }
  },
  computed: {
    ...mapState('headerMsgStore', ['entities']),
  },
  methods: {
    ...mapActions('headerMsgStore', ['getHeader', 'selectEntity']),
    select(e) {
      this.selectEntity({
        entity_id: e.target.value,
      })
    },
  },
  mounted() {
    this.getHeader(this.$route.query.entity_id)
  },
}
</script>

