<template>
  <Echarts :options="newOption"
           :theme="chartTheme"></Echarts>
</template>

<script type="text/javascript">
import Echarts from 'vue-echarts'

export default {
  name: 'lineDoubleAxis',
  props: ['chartTheme', 'data', 'color', 'dataZoom', 'yaxisNameL', 'yaxisNameR', 'property'],
  components: {
    Echarts,
  },
  computed: {
    newOption() {
      const option = this.chartOption
      const property = this.property
      option.color = this.color
      option.legend.data = this.data.map(item => item.name)
      option.xAxis.data = this.data[0].data.map(item => item.name)
      option.yAxis[0].name = this.yaxisNameL
      option.yAxis[1].name = this.yaxisNameR
      option.series = this.data.map((item) => {
        const obj = {
          name: item.name,
          // type: 'bar',
          // type: item.type
          type: property.filter(p => p.name === item.name)[0].type,
          // barWidth: '50%',
          barMaxWidth: 20,
          // yAxisIndex: item.yAxisIndex,
          yAxisIndex: property.filter(p => p.name === item.name)[0].axis,
          symbol: 'emptyCircle',
          itemStyle: {
            normal: {
              borderWidth: 1,
            },
          },
          data: item.data.map(item => item.value),
        }
        return obj
      })

      if (this.dataZoom === true) {
        option.dataZoom = [
          {
            show: true,
            height: 10,
            xAxisIndex: [0],
            bottom: 4,
            start: 10,
            end: 50,
            backgroundColor: '#81d9e5',
            fillerColor: '#05d0eb',
            handleIcon:
              'path://M306.1,413c0,2.2-1.8,4-4,4h-59.8c-2.2,0-4-1.8-4-4V200.8c0-2.2,1.8-4,4-4h59.8c2.2,0,4,1.8,4,4V413z',
            handleSize: '100%',
            handleStyle: {
              color: '#05d0eb',
            },
            textStyle: { color: 'rgba(0,0,0,0)' },
            borderColor: '#81d9e5',
          },
          {
            type: 'inside',
            show: true,
            height: 15,
            start: 1,
            end: 35,
          },
        ]
        // end
      }

      return option
    },
  },
  data() {
    return {
      chartOption: {
        tooltip: {
          trigger: 'axis',
          backgroundColor: 'rgba(0,0,0,0)',
          formatter(params) {
            return (
              `${'<div class="lineDoubleAxisTooltip">' +
              '<p class="title">'}${
              params[0].name
              }</p >` +
              `<div class="itemsBorder clearfix"><div></div><div></div><div></div></div>${
              params
                .map(
                  item =>
                    `<div class="itemCon clearfix"><p class="itembg fl"></p><p class="indexName fl">${
                    item.seriesName
                    }</p><p class="index fr">${
                    Number(item.value).toFixed(2)
                    }</p ></div>`,
                )
                .join(' ')
              }</div>`
            )
          },
        },
        legend: {
          // left: 'center',
          // itemWidth: 10,
          // itemHeight: 10,
          // icon: 'rect',
          type: 'scroll',
          pageTextStyle: {
            color: '#fff',
          },
          textStyle: {
            fontSize: 12,
          },
          data: [],
        },
        grid: {
          left: '2%',
          right: '2%',
          top: 30,
          bottom: 0,
          containLabel: true,
        },
        xAxis: {
          type: 'category',
          boundaryGap: true,
          axisTick: {
            show: false,
          },
          axisLine: {
            show: false,
          },
          axisLabel: {
            fontSize: 14,
          },
          splitLine: {
            show: false,
          },
          data: [],
        },
        yAxis: [
          {
            type: 'value',
            name: this.yaxisNameL,
            nameGap: 10,
            splitNumber: 5,
            nameTextStyle: {
              fontSize: 12,
            },
            axisTick: {
              show: false,
            },
            axisLine: {
              show: false,
            },
            axisLabel: {
              fontSize: 12,
            },
          },
          {
            type: 'value',
            name: this.yaxisNameR,
            position: 'right',
            splitNumber: 5,
            nameTextStyle: {
              fontSize: 12,
            },
            axisTick: {
              show: false,
            },
            axisLine: {
              show: false,
            },
            axisLabel: {
              fontSize: 12,
            },
            splitLine: {
              show: false,
            },
          },
        ],
        series: [],
      },
    }
  },
  mounted() {
    // console.log('fffffffffffffffffffff', this.data)
  },
}
</script>

