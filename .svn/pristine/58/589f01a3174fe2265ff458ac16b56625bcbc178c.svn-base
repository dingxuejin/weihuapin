<template>
  <div class="trend">
    <div class="header">
      <span>违法行为数量变化趋势</span>
      <div class="headerOpen"
           @click="openDetailquantityIllegal"></div>
    </div>
    <div class="change">
      <div>统计周期</div>
      <div>
        <key-value-select width='119px'
                          :data='yearOption'
                          @select='selectYear'></key-value-select>
      </div>
      <div>
        <key-value-select width='107px'
                          :data='monthOption'
                          @select='selectMonth'></key-value-select>
      </div>
      <div>行为类别</div>
      <div>
        <key-value-select width='235px'
                          :data='dangerOption'
                          @select='selectType'></key-value-select>
      </div>
    </div>
    <div class="echart">
      <loading :data='driverIllegalTrend'>
        <lineChart chartTheme="dark"
                   :data="driverIllegalTrend"
                   :color="[
                        '#05d0eb',
                        '#81d9e5',
                        '#f6ffcb',
                        '#e75029',
                        '#038bfc',
                        '#006a55',
                      ]"
                   yaxisName="占比(%)"></lineChart>
      </loading>
    </div>
    <!-- 不同周期违法行为数量 -->
    <template>
      <div class="quantityIllegal">
        <quantityIllegal></quantityIllegal>
      </div>
    </template>
  </div>
</template>
<script>
/*eslint-disable */
import { mapState, mapActions, mapMutations } from "vuex";
import variationTrend from "../../../components/companysecure/variationTrend";
import Htitle from "../../../components/companysecure/title";
import KeyValueSelect from "../../../components/KeyValueSelect";
import lineChart from "../../../components/charts/lineChart";
import Dictionary from "../../../util/dictionary";

import quantityIllegal from "../../../containers/companysecure/popupSecContainer/quantityIllegal";

const { driveEventType: { illegal }, date: { year, month } } = Dictionary;

export default {
  components: {
    variationTrend,
    Htitle,
    KeyValueSelect,
    lineChart,
    quantityIllegal
  },
  computed: {
    ...mapState("illegalTrend", ["driverIllegalTrend"]),
    ...mapState("secureMain", ["entity_id"]),
    property() {
      return [
        {
          name: "同比",
          type: "line",
          axis: 0
        },
        {
          name: "环比",
          type: "line",
          axis: 0
        }
      ];
    },
    fetchData() {
      return {
        entity_id: this.entity_id,
        year: this.year,
        month: this.month,
        drive_event_type_code: this.type
      };
    }
  },
  methods: {
    ...mapActions("illegalTrend", ["getDriverIllegalTrend"]),
    ...mapMutations("popupSecContainer", ["getComDetails"]),
    ...mapMutations("popupSecContainer", [
      "setquantityIllegal_show"
      // "setillegalDistributeTrendArea_show",
      // "setillegalDistributeTrendInterval_show"
    ]),
    openDetailquantityIllegal() {
      // this.setillegalDistributeTrendArea_show(true);
      this.setquantityIllegal_show(true);
    },
    openDetail(item) {
      this.getComDetails(item);
    },
    selectYear(item) {
      this.year = item.value;
      this.getDriverIllegalTrend(this.fetchData);
    },
    selectMonth(item) {
      this.month = item.value;
      this.getDriverIllegalTrend(this.fetchData);
    },
    selectType(item) {
      this.type = item.value;
      this.getDriverIllegalTrend(this.fetchData);
    }
  },
  data: () => ({
    dangerOption: illegal,
    yearOption: [{ label: "全部", value: null }, ...year],
    monthOption: [{ label: "全部", value: null }, ...month],
    year: null,
    month: null,
    type: null
    // year: 2017,
    // month: 11,
    // type: 30100,
  })
};
</script>
