<template>
  <div class="content"  >
    <div class="header">
      <htitle data='安全驾驶排名'></htitle>
    </div>
    <div class="select">
      <div>统计类型</div>
      <div v-if="organcon">
        <key-value-select :data='organcon'
                          width='339px'
                          @select="selectOrgan"></key-value-select>
      </div>
    </div>
    <div class="change">
      <div :class='{show:period=="y"}'
           @click='showtoggle("y")'>本年</div>
      <div :class='{show:period=="m"}'
           @click='showtoggle("m")'>本月</div>
    </div>
    <div class="ranking">
      <div>本机构排名</div>
      <div >
        <span  >{{getRanking}}</span>
        <nav></nav>
      </div>
      <div></div>
    </div>
    <div class="title">
      <div>排名</div>
      <div>机构</div>
      <div>总安全得分</div>
    </div>
    <ul v-if="secureDriverOrder">
      <li v-for='(item,index) in order'
          :key='index'>
        <div>{{item.ranking}}</div>
        <div :title="item.qy_cdxx.entity_name" class="over">{{item.qy_cdxx.entity_name}}</div>
        <div>{{item.score}}</div>
      </li>
    </ul>
  </div>
</template>
<script>
/*eslint-disable */
import { mapState, mapActions } from 'vuex'
import KeyValueSelect from '../../../components/KeyValueSelect'
import htitle from '../../../components/companysecure/title'

export default {
  computed: {
    ...mapState('securityRanking', ['secureDriverOrder']),
    order() {
      return this.secureDriverOrder && this.secureDriverOrder[this.period]
    },
    organcon() {
      if (this.secureDriverOrder&&this.secureDriverOrder!==null) {
        const organList = this.secureDriverOrder[this.period].map(o => ({
          value: o.qy_cdxx!==null?(o.qy_cdxx.entity_id ? o.qy_cdxx.entity_id : '1310000010010000'):'1310000010010000',
          label: o.qy_cdxx!==null?(o.qy_cdxx.entity_name ? o.qy_cdxx.entity_name : '华南配送中心'):'华南配送中心',
        }))
        return organList
      }
      return true
    },
    getSelectParams() {
      return {
        vehicleId: this.entityIdValue,
        year: this.yearValue,
        month: this.monthValue,
      }
    },
    getRanking() {
      if (this.order) {
        const len = this.order.length
        const e = this.order.filter(
          e => e.entity_id === this.entityIdValue,
        )
        if (e.length > 0) {
          return `${e[0].ranking} / ${len}`
        }
        return `${this.order[0].ranking} / ${len}`
      }
      return true
    },
  },
  components: {
    KeyValueSelect,
    htitle,
  },
  data() {
    return {
      period: 'y',
      entityIdValue: null,
      monthValue: null,
      yearValue: null,
      // organcon: null,
    }
  },
  methods: {
    ...mapActions('securityRanking', ['getSecureDriverOrder']),
    showtoggle(period) {
      this.period = period
    },
    selectOrgan(item) {
      this.entityIdValue = item.value
      this.monthValue = new Date().getMonth() + 1
      this.yearValue = new Date().getFullYear() - 1
      const arg = {
        entity_id: item.value,
        year: this.yearValue,
        month: this.monthValue,
      }
      this.getSecureDriverOrder(arg)
    },
  },
  beforeUpdate() {
    // console.log(this.order)
  },
  mounted () {
    if(this.secureDriverOrder){
      console.log(this.secureDriverOrder)
    }
  }
}
</script>
