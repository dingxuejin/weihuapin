                              @select='select("training_type_code",$event)'></key-value-select>
          </div>
        </div>
      </div>

      <!-- 内容部分 -->
      <div class="trainListCon eleScrollBar">
        <list-component :listData="trainDetailsInfo"
                        v-if="trainDetailsInfo"
                        :titlesData="titlesData"></list-component>
      </div>
    </div>
